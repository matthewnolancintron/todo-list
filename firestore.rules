// Allow a user that is signed in to only
// be able to read and write to their data
// which is stored as an object inside of a users collection:
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow create,read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}